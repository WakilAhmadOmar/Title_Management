{
    "compilerOptions": {
      "jsx": "react-jsx",  // or "react" for older React versions
      "module": "ESNext",
      "target": "ESNext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true
    },
    "include": ["src", "src/__test__"],
    "exclude": ["node_modules"]
  }
  